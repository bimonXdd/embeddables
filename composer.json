{
    "name":         "gentle/embeddables",
    "type":         "library",
    "description":  "Small collection of value objects.",
    "homepage":     "http://www.gentle.ro",
    "keywords":     ["value-objects", "composition", "immutable"],
    "license":      "MIT",
    "authors": [
        {
            "name":     "Alexandru Guzinschi",
            "email":    "alex@gentle.ro",
            "homepage": "http://www.sebi.me",
            "role":     "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Gentle\\Embeddable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gentle\\Embeddable\\Test\\": "tests"
        }
    },
    "scripts": {
        "style": "php vendor/bin/phpcs --standard=psr2 src/",
        "test": "php vendor/bin/phpunit"
    }
}
